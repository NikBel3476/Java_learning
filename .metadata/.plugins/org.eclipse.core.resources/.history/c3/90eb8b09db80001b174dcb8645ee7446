package lab4;

import java.util.Scanner;
import java.util.Collections;

public class matrix {
	static Scanner enter = new Scanner(System.in);
	
	static int[][] Matrix;
	
	private static int[][] enterMatrix(int i, int j) {
		Matrix = new int[i][j];
		for (int m = 0; m < Matrix.length; m++) {
			for (int n = 0; n < Matrix[m].length; n++) {
				Matrix[m][n] = (int) (Math.random() * 100); 
			}
		}
		return Matrix;
	}
	
	private static void printMatrix(int[][] matrix) {
		for (int i = 0; i < Matrix.length; i++) {
			for (int j = 0; j < Matrix[i].length; j++) {
				System.out.print(matrix[i][j] + " ");
			}
			System.out.println();
		}
	}
	
	private static int[][] shift(int[][] matrix, int columnNum) {
		int prevValue, curValue;
		prevValue = matrix[0][columnNum];
		for (int i = 0; i < matrix.length - 1; i++) {
			curValue = matrix[i + 1][columnNum];
			matrix[i + 1][columnNum] = prevValue;
			prevValue = curValue;
			
		}
		matrix[0][columnNum] = prevValue;
		return matrix;
	}
	
	private static int[] getMaxInColumns(int[][] matrix) {
		int[] maxNums = new int[matrix.length];
		int maxNumInColumn;
		for (int i = 0; i < matrix.length; i++) {
			maxNumInColumn = matrix[0][i];
			for (int j = 1; j < matrix.length; j++) {
				if (matrix[j][i] > maxNumInColumn) {
					maxNumInColumn = matrix[j][i];
				}
				maxNums[i] = maxNumInColumn;
			}
		}
		return maxNums;
	}
	
	private static int[][] shiftMaxToDown(int[][] matrix) {
		int[] maxNumsInColumns = getMaxInColumns(matrix);
		for (int i = 0; i < matrix[0].length; i++) {
			System.out.println(maxNumsInColumns[i]);
//			while (matrix[matrix.length - 1][i] != maxNumsInColumns[i]) {
//				Matrix = shift(Matrix, i);
//			}
		}
		return Matrix;
	}
	
	public static void main(String[] args) {
		System.out.println("Введите кол-во строк матрицы");
		System.out.print("Кол-во строк матрицы = ");
		int i = enter.nextInt();
		System.out.println("Введите кол-во столбцов матрицы");
		System.out.print("Кол-во столбцов матрицы = ");
		int j = enter.nextInt(); 
		int[][] Matrix = enterMatrix(i, j);
		System.out.println("Изначальная матрица:");
		printMatrix(Matrix);
		
		Matrix = shiftMaxToDown(Matrix);
		System.out.println();
		System.out.println("Преобразованная матрица:");
		printMatrix(Matrix);
	}
}
